@model ParcelLocker.Models.ViewModels.ContactVM
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1 class="text-center">KONTAKT</h1>
<p>Masz pytania odnośnie naszych usług? Skontaktuj się z nami przy pomocy poniższego formularza.</p>
<div class="line">

    <div class="ContactForm">
        <form asp-action="SendMessage" id="contact" style="width: 100% !important; margin-left: 0px;">
            <div class="row">
                <div class="col-md-6 col-sm-12 text-black">
                    <fieldset>
                        <input name="name" type="text" id="name" asp-for="Name" placeholder="Imię" required="" class="contact-field">
                    </fieldset>
                </div>
                <div class="col-md-6 col-sm-12">
                    <fieldset>
                        <input name="email" type="text" asp-for="Email" id="email" placeholder="E-mail" required="" class="contact-field">
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <textarea name="message" rows="6" id="message" asp-for="Message" placeholder="Wiadomość" required="" class="contact-field"></textarea>
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <button type="submit" id="form-submit" class="btn btn-warning">Wyślij</button>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>


</div>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Pomyślnie wysłano wiadomość");
        }

    </script>

}


